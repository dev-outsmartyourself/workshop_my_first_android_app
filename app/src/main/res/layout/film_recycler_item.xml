<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/film_recycler_item_card"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="8dp"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:id="@+id/film_recycler_item_info_container"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/film_recycler_item_episode_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Star Wars: Episode I â€“ The Phantom Menace"
                    android:textSize="20dp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/film_recycler_item_episode_number"
                        android:layout_height="wrap_content"
                        android:text="Episode 1"/>
                    <TextView
                        android:layout_marginTop="4dp"
                        android:id="@+id/film_recycler_item_episode_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:text="1999"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:textColor="#FFC400"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="IMDB:"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:id="@+id/film_recycler_item_episode_imdb"
                            android:text="6,5/10"/>


                    </LinearLayout>


                </LinearLayout>


            </RelativeLayout>

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/film_recycler_item_episode_image"
                android:layout_width="160dp"
                android:layout_height="160dp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>